{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "useDefineForClassFields": false,
    "noEmit": true
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.html"
  ],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true
  }
}